{
  "scenarios": [
    {
      "name": "HighTemperatureTest",
      "description": "Tests high temperature detection",
      "steps": [
        {
          "name": "Check normal temperature",
          "inputs": [
            {
              "key": "input:temperature",
              "value": 25.0,
              "format": "string"
            }
          ],
          "delay": 500,
          "expectations": [
            {
              "key": "output:high_temperature",
              "expected": false,
              "validator": "boolean"
            }
          ]
        },
        {
          "name": "Check high temperature",
          "inputs": [
            {
              "key": "input:temperature",
              "value": 35.0,
              "format": "string"
            }
          ],
          "delay": 500,
          "expectations": [
            {
              "key": "output:high_temperature",
              "expected": true,
              "validator": "boolean"
            }
          ]
        }
      ]
    },
    {
      "name": "HumidityRangeTest",
      "description": "Tests humidity range detection",
      "steps": [
        {
          "name": "Check low humidity",
          "inputs": [
            {
              "key": "input:humidity",
              "value": 20.0,
              "format": "string"
            }
          ],
          "delay": 500,
          "expectations": [
            {
              "key": "output:humidity_normal",
              "expected": false,
              "validator": "boolean"
            }
          ]
        },
        {
          "name": "Check normal humidity",
          "inputs": [
            {
              "key": "input:humidity",
              "value": 50.0,
              "format": "string"
            }
          ],
          "delay": 500,
          "expectations": [
            {
              "key": "output:humidity_normal",
              "expected": true,
              "validator": "boolean"
            }
          ]
        },
        {
          "name": "Check high humidity",
          "inputs": [
            {
              "key": "input:humidity",
              "value": 80.0,
              "format": "string"
            }
          ],
          "delay": 500,
          "expectations": [
            {
              "key": "output:humidity_normal",
              "expected": false,
              "validator": "boolean"
            }
          ]
        }
      ]
    },
    {
      "name": "ComfortIndexTest",
      "description": "Tests comfort index calculation",
      "steps": [
        {
          "name": "Calculate comfort index",
          "inputs": [
            {
              "key": "input:temperature",
              "value": 75.0,
              "format": "string"
            },
            {
              "key": "input:humidity",
              "value": 50.0,
              "format": "string"
            }
          ],
          "delay": 500,
          "expectations": [
            {
              "key": "output:comfort_index",
              "expected": 86.35,
              "validator": "numeric",
              "tolerance": 0.01
            }
          ]
        }
      ]
    },
    {
      "name": "AlertTest",
      "description": "Tests alert generation based on multiple conditions",
      "steps": [
        {
          "name": "Setup conditions for alert",
          "inputs": [
            {
              "key": "input:temperature",
              "value": 35.0,
              "format": "string"
            },
            {
              "key": "input:humidity",
              "value": 80.0,
              "format": "string"
            }
          ],
          "delay": 1000,
          "expectations": [
            {
              "key": "output:high_temperature",
              "expected": true,
              "validator": "boolean"
            },
            {
              "key": "output:humidity_normal",
              "expected": false,
              "validator": "boolean"
            },
            {
              "key": "output:alert_status",
              "expected": "critical",
              "validator": "string"
            }
          ]
        }
      ]
    },
    {
      "name": "TemperatureRisingTest",
      "description": "Tests detection of rapidly rising temperature",
      "inputSequence": [
        {
          "input:temperature": 20,
          "delayMs": 200
        },
        {
          "input:temperature": 22,
          "delayMs": 200
        },
        {
          "input:temperature": 24,
          "delayMs": 200
        },
        {
          "input:temperature": 27,
          "delayMs": 200
        },
        {
          "input:temperature": 30,
          "delayMs": 200
        }
      ],
      "expectedOutputs": {
        "output:temperature_rising": true
      }
    }
  ]
}